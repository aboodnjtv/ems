<% layout("layouts/boilerplate")%>

<div class="d-flex justify-content-center mt-5">
    <div class="col-sm-2 mb-5" style="width: 400px;">
        <div class="card dark_mode_black dark_mode_roundness_index">
            <img src="https://images.unsplash.com/photo-1526304640581-d334cdbbf45e?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1170&q=80" class="card-img-top dark_mode_roundness_index" style="width: 398px; height: 398px;object-fit: cover">
            <div class="card-body">
                <h4>Find Cost Per Pound</h4>
        
                <form id="cost_per_pound_form" class="needs-validation" novalidate>
                    <div class="mb-3">
                        <label for="cost" class="form-label">Cost (USD)</label>
                        <input type="cost" class="form-control" id="cost" name="cost" required>
                    </div>
                    <div class="mb-3">
                        <label for="weight" class="form-label">Weight (Grams)</label>
                        <input type="weight" class="form-control" id="weight" name="weight" required>
                    </div>
                    <h5 id="cost_result"></h5>
                    <div class="d-grid gap-2">
                        <button class="btn btn-success">Find Cost/LB</button>
                    </div>
                    
                </form>

            </div>
        </div>
    </div>
</div>

<script src="/javascripts/cost_per_pound.js"></script>

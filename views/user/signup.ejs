<% layout("layouts/boilerplate")%>
<div class="d-flex justify-content-center mt-5">
    <div class="col-sm-2 mb-5">
        <div class="card dark_mode_black dark_mode_roundness_index" style="width: 500px;">
            <img src="https://images.unsplash.com/photo-1545165375-1b744b9ed444?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1170&q=80" class="card-img-top dark_mode_roundness_index" style="width: 498px; height: 348px;object-fit: cover">
            <div class="card-body">
                <h5 class="card-title">Sign Up</h5>
        
                <form action="/signup" method="POST" class="needs-validation" novalidate>
                                
                    <div class="mb-3">
                        <label for="name" class="form-label">Full Name</label>
                        <input type="text" class="form-control" id="name" name="name" required>
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" class="form-control" id="password" name="password" required>
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" class="form-control" id="email" name="email" required>
                    </div>
                    <div class="d-grid gap-2">
                        <button class="btn btn-success">Sign Up</button>
                    </div>
                    
                </form>

            </div>
        </div>
    </div>
</div>
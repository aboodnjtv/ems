<% layout("layouts/boilerplate")%>

<div class="d-flex justify-content-center mt-5">
    <div class="col-sm-2 mb-5" style="width: 600px;">
        <div class="card dark_mode_black dark_mode_roundness_index">
            <img src="https://images.unsplash.com/photo-1570451488142-71d08e1511e3?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=687&q=80" class="card-img-top dark_mode_roundness_index" style="width: 598px; height: 348px;object-fit: cover">
            <div class="card-body">

                <form method="POST" action="/user/edit-name" >
                    <div class="form-group">
                        <label for="firstname">First Name</label>
                        <input name="firstname" type="text" value="<%=currentUser.firstname%>">
                    </div>
                    <div class="form-group">
                        <label for="lastname">Last Name</label>
                        <input name="lastname" type="text" value="<%=currentUser.lastname%>">
                    </div>
                    <button class="btn save">Save Name</button>
                </form>

            </div>
        </div>
    </div>
</div>


<style>
    form {
        display: flex;
        flex-direction: column;
        gap: 10px;
    }

    .form-group {
        display: flex;
        flex-direction: column;
        width: 100%;
    }

    label {
        margin-bottom: 5px;
        width: 100%;  /* Make label take up 100% of the container */
    }

    input {
        width: 100%;  /* Make input take up 100% of the container */
        padding: 8px;
        box-sizing: border-box;  /* Ensures padding doesn't affect width */
    }

    .btn.save {
        margin-top: 10px;
        align-self: flex-start;
    }
</style>


<script src="/javascripts/cost_per_pound.js"></script>
